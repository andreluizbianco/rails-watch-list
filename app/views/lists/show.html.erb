<h1>List</h1>

<h2><%= @list.name %></h2>

<ul>
    <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <%= image_tag "logo.png", alt: "Le Wagon", width: 200 %>
    <li><%= bookmark.comment %></li>
    <% end %>
</ul>

<p><%= link_to "Back to Movie lists", lists_path %></p>
<p><%= link_to "Add a movie to this list", new_list_bookmark_path(@list) %></p>
